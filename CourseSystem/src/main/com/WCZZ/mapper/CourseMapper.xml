    <insert id="add" parameterType="main.com.WCZZ.entity.Course">
        INSERT INTO course(
          cou_name,
          credit,
          type,
          nature,
          necessity
        )
        VALUES (
          #{cou_name},
          #{credit},
          #{type},
          #{necessity}
        )
    </insert>

    <select id="query" resultType="main.com.WCZZ.entity.Course">
        SELECT
          *
        FROM course
        <where>
            del_flag != 0
            <if test="cou_id != null and cou_id != ''">
                AND cou_id LIKE CONCAT('%',#{couId},'%')
            </if>
            <if test="cou_name != null and cou_name != ''">
                AND cou_name LIKE CONCAT('%',#{couName},'%')
            </if>
        </where>
    </select>

    <update id="modifyById" parameterType="main.com.WCZZ.entity.Course">
        UPDATE course
        SET
          <if test="couName != null and couName !=''"></if>
          cou_name = #{couName},
          <if test="credit != null and credit != ''"></if>
          credit = #{credit},
         <if test="type != null and type != ''"></if>
          type = #{type},
         <if test="nature != null and nature != ''"></if>
          nature = #{nature},
         <if test="necessity != null and necessity != (0|1)"></if>
          necessity = #{necessity}
        WHERE
          cou_id = #{couId}
    </update>

    <update id="deleteById">
        UPDATE course
        SET
          del_flag = 0
        WHERE
          cou_id = #{couId}
    </update>
</mapper>