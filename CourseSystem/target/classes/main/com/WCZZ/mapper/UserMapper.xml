<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="main.com.WCZZ.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="main.com.WCZZ.entity.User">
        <id column="user_id" property="userId"/>
        <result column="password" property="password"/>
        <result column="create_date" property="createDate"/>
        <result column="del_flag" property="delFlag"/>
        <collection property="userRoles" ofType="main.com.WCZZ.entity.Role" column="user_id" select="main.com.WCZZ.mapper.RoleMapper.selectByUserId"/>
    </resultMap>

    <select id="selectUserById" parameterType="string" resultMap="BaseResultMap">
        Select
         *
        From user
        Where user_id=#{userId}
    </select>
</mapper>