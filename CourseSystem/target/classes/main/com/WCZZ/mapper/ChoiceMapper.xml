  <insert id="add" parameterType="main.com.WCZZ.entity.Choice">
    INSERT INTO choice(
      stu_id,
      cou_id,
      choose_date,
      withdraw_date
      )
    VALUES (
      #{stuId},
      #{couId},
      #{chooseDate},
      #{withdrawDate}
    )
  </insert>
  
  <select id="selectByIds" resultType="main.com.WCZZ.entity.Choice">
    SELECT 
      *
    FROM choice
    <where>
      <if test="stuId != null and stuId != ''">
        stu_id = #{stuId}
      </if>
      <if test="couId != null and couId != ''">
        AND cou_id = #{couId}
      </if>
    </where>
  </select>

  <update id="choose" parameterType="main.com.WCZZ.entity.Choice">
    UPDATE choice
    SET
    choose_date = #{chooseDate}
    WHERE
    stu_id = #{stuId}
    AND cou_id = #{couId}
  </update>
  
  <update id="withdraw" parameterType="main.com.WCZZ.entity.Choice">
    UPDATE choice
    SET
      withdraw_date = #{withdrawDate}
    WHERE
      stu_id = #{stuId}
      AND cou_id = #{couId}
  </update>
</mapper>