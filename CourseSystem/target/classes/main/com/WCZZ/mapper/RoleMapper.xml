<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="main.com.WCZZ.mapper.RoleMapper">
    <select id="queryRoleIdByUserId" resultType="integer">
        SELECT
          role_id
        FROM
          r_user_role
        WHERE
          user_id = #{userId}
    </select>

    <select id="selectByUserId" resultType="main.com.WCZZ.entity.Role">
        SELECT
         *
        FROM
         role
        WHERE
         role_id IN (SELECT role_id FROM r_user_role WHERE user_id = #{userId})
    </select>
</mapper>