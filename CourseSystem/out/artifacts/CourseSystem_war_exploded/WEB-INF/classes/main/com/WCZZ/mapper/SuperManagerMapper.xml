<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="main.com.WCZZ.mapper.SuperManagerMapper">
    <sql id="baseSql">
        sup_id,
        sup_name,
        sex,
        phone,
        create_by,
        create_date
    </sql>

    <select id="query">
        SELECT
          <include refid="baseSql" />
        FROM super_manager
        <where>
            del_flag != 0
            <if test="supId != null">
                sup_id LIKE CONCAT('%',#{supId},'%')
            </if>
            <if test="supName != null and supName != ''">
                sup_name LIKE CONCAT('%',#{supName},'%')
            </if>
        </where>
    </select>

    <insert id="add" parameterType="main.com.WCZZ.entity.SuperManager">
        INSERT INTO super_manager(
          <include refid="baseSql"/>
        )
        VALUES (
          null,
          #{supName},
          #{sex},
          #{phone},
          #{create_by},
          #{create_date}
        )
    </insert>

    <update id="modify" parameterType="main.com.WCZZ.entity.SuperManager">
        UPDATE super_manager
        <trim prefix="SET" suffixOverrides=",">
          <if test="supName != null and supName != ''">
              sup_name = #{supName},
          </if>
          <if test="sex != null and sex != ''">
              sex = #{sex},
          </if>
          <if test="phone != null and phone != ''">
              phone = #{phone}
          </if>
        </trim>
        WHERE
          sup_id = #{supId}
    </update>

    <update id="delete">
        UPDATE super_manager
        SET
          del_flag = 0
        WHERE
          sup_id = #{supId}
    </update>

</mapper>